.int-content
  .form-title
    Lista de paquetes
    .model-action
      %span.badge.badge-secondary.secondary
        = link_to 'Crear paquete', new_package_path
  .row 
    .col-sm-12.col-lg-12
      %table.table
        %thead
          %tr
            %th Nombre
            %th Valor de carrera
            %th Cantidad de carreras
            %th Utilidad taxista
            %th Valor del paquete
            %th Acciones
        %tbody
          - @packages.each do |package|
            %tr
              %td
                = package.nombre
              %td
                = package.valor_de_carrera
              %td
                = package.cantidad_de_carreras
              %td
                = package.utilidad_taxista
              %td
                = package.valor_de_paquete
              %td
                = icon_link_to '', edit_package_path(package.id), 'fa-pencil'
                = icon_link_to_delete '', package
