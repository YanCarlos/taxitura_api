.int-content
  .form-title
    Lista de taxis
    .model-action
      %span.badge.badge-secondary.secondary
        = link_to 'Crear Taxi', new_taxi_path
  = render partial: 'filter'
  .horizontal-divider
  .row 
    - @taxis.each do |taxi|
      .col-sm-4.col-xs-12.col-md-3.col-lg-2
        .thumbnail
          .gray-rectangle
            %span
              = taxi.placa
          .caption
            .taxi
              .marca
                %span
                  = taxi.modelo
                %span
                  = taxi.marca
              .actions
                = link_to 'Ver', edit_taxi_path(taxi.id)
   
