= bootstrap_form_for(@question) do |f|
  .row
    .col-md-4
      = f.text_field :pregunta, {required: 'required'}
    .col-md-4
      = f.text_field :respuesta, {required: 'required'}
    .col-md-4
      = f.select :tipo, ['usuarios', 'taxistas']
  .row
    .actions-form
      - if @question.new_record?
        = f.submit 'Crear', class: 'btn btn-primary'
      - else
        = f.submit 'Actualizar', class: 'btn btn-primary'
